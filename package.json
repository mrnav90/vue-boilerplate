{
  "name": "vue-boilerplate",
  "version": "1.0",
  "author": "VietNa",
  "description": "This is repo use for vue project base",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --https --hot --progress",
    "test": "cross-env NODE_ENV=test jest --verbose",
    "test:watch": "jest --watchAll --verbose",
    "test:coverage": "jest --verbose --coverage",
    "build:dev": "webpack --watch --hot --progress",
    "start": "cross-env NODE_ENV=production webpack -p --progress --optimize-max-chunks 15 --optimize-min-chunk-size 10000 --env.prod=true",
    "eslint": "./node_modules/.bin/eslint --ext .jsx,.js src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mrnav90/vue-boilerplate.git"
  },
  "engines": {
    "npm": ">=5",
    "node": ">=10.16.3"
  },
  "eslintIgnore": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add --force"
    ],
    "*.ts": "npm run lint:tslint",
    "*.tsx": "npm run lint:tslint"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "yarn eslint"
    }
  },
  "dependencies": {
    "axios": "^0.20.0",
    "express": "^4.17.1",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.0",
    "moment-timezone": "^0.5.31",
    "normalize.css": "^8.0.1",
    "toastr": "^2.1.4",
    "universal-cookie": "^4.0.4",
    "vue": "^3.0.0",
    "vue-i18n": "^8.21.1",
    "vue-loader": "^15.9.3",
    "vue-meta": "^2.4.0",
    "vue-router": "^3.4.5",
    "vue-server-renderer": "^2.6.12",
    "vuex": "^3.5.1",
    "vuex-router-sync": "^5.0.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "@vue/cli": "^4.5.6",
    "@vue/cli-plugin-babel": "^4.5.6",
    "@vue/cli-service": "^4.5.6",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^6.0.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "dotenv": "^8.2.0",
    "error-overlay-webpack-plugin": "^0.4.1",
    "eslint-plugin-vue": "^7.0.0-beta.4",
    "file-loader": "^6.1.0",
    "husky": "^4.3.0",
    "image-webpack-loader": "^7.0.1",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.11.2",
    "prettier": "^2.1.2",
    "terser-webpack-plugin": "^4.2.2",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.2",
    "webpack-merge": "^5.1.4",
    "webpack-node-externals": "^2.5.2"
  }
}
